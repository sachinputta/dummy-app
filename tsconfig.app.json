{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/out-tsc-server",  // Output directory for SSR build
    "types": [
      "node"
    ]
  },
  "files": [
    "src/main.ts",            // Main entry point for your client-side app
    "src/main.server.ts",     // Main entry point for SSR app (server-side)
    "server.ts"               // Your custom server file
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
